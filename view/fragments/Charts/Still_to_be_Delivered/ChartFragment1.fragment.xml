<core:FragmentDefinition xmlns:suite="sap.suite.ui.commons" xmlns:m="sap.m" xmlns:core="sap.ui.core" xmlns:table="sap.ui.table"
	xmlns:viz="sap.viz.ui5.controls" xmlns:vizData="sap.viz.ui5.data" xmlns:vizFeeds="sap.viz.ui5.controls.common.feeds">
	<suite:ChartContainer id="chartContainer1" showFullScreen="true" showPersonalization="false" autoAdjustHeight="true"
		showLegendButton="false" title="Still to be Delivered">
		<suite:content>
			<!-- ðŸ”¹ Chart View -->
			<suite:ChartContainerContent icon="sap-icon://bar-chart" title="Chart View">
				<suite:content>
					<viz:VizFrame id="idStillToDeliverChart" vizType="column" height="380px" width="100%" uiConfig="{applicationSet:'fiori'}"
						class="zoomedChart">
						<viz:dependents>
							<viz:Popover id="idStillToDeliverPopover"/>
						</viz:dependents>
						<viz:dataset>
							<vizData:FlattenedDataset data="{stillToDeliverData>/}">
								<vizData:dimensions>
									<vizData:DimensionDefinition name="Vendor Name" value="{stillToDeliverData>Lifnr}" displayValue="{stillToDeliverData>Name1}"/>
								</vizData:dimensions>
								<vizData:measures>
									<vizData:MeasureDefinition name="Amount (â‚¹ L)" value="{stillToDeliverData>Netwr}"/>
								</vizData:measures>
							</vizData:FlattenedDataset>
						</viz:dataset>
						<viz:feeds>
							<vizFeeds:FeedItem uid="valueAxis" type="Measure" values="Amount (â‚¹ L)"/>
							<vizFeeds:FeedItem uid="categoryAxis" type="Dimension" values="Vendor Name"/>
						</viz:feeds>
					</viz:VizFrame>
				</suite:content>
			</suite:ChartContainerContent>
			<!-- ðŸ”¹ Table View -->
			<suite:ChartContainerContent icon="sap-icon://table-chart" title="Table View">
				<suite:content>
					<table:Table id="idStillToDeliverTable" rows="{stillToDeliverData>/}" selectionMode="None" visibleRowCount="10">
						<table:columns>
							<table:Column>
								<m:Label text="Vendor"/>
								<table:template>
									<m:Text text="{stillToDeliverData>Lifnr}"/>
								</table:template>
							</table:Column>
							<table:Column>
								<m:Label text="Vendor Name"/>
								<table:template>
									<m:Text text="{stillToDeliverData>Name1}"/>
								</table:template>
							</table:Column>
							<table:Column>
								<m:Label text="Amount (â‚¹ L)"/>
								<table:template>
									<m:Text text="{stillToDeliverData>Netwr}"/>
								</table:template>
							</table:Column>
						</table:columns>
					</table:Table>
				</suite:content>
			</suite:ChartContainerContent>
		</suite:content>
	</suite:ChartContainer>
</core:FragmentDefinition>