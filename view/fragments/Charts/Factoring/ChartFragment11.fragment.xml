<core:FragmentDefinition xmlns:suite="sap.suite.ui.commons" xmlns:m="sap.m" xmlns:core="sap.ui.core" xmlns:table="sap.ui.table"
	xmlns:viz="sap.viz.ui5.controls" xmlns:vizData="sap.viz.ui5.data" xmlns:vizFeeds="sap.viz.ui5.controls.common.feeds">
	<suite:ChartContainer id="chartContainerFactoring" showFullScreen="true" showPersonalization="false" autoAdjustHeight="false"
		showLegendButton="false" title="Factoring">
		<suite:content>
			<!-- ðŸ“Š CHART VIEW -->
			<suite:ChartContainerContent icon="sap-icon://bar-chart" title="Chart View">
				<suite:content>
					<viz:VizFrame id="idFactoringChart" vizType="column" height="380px" width="100%" uiConfig="{applicationSet:'fiori'}">
						<!-- Popover for tooltip -->
						<viz:dependents>
							<viz:Popover id="idFactoringPopOver"/>
						</viz:dependents>
						<!-- Dataset -->
						<viz:dataset>
							<vizData:FlattenedDataset data="{factoringData>/}">
								<vizData:dimensions>
									<vizData:DimensionDefinition name="Vendor Name" value="{factoringData>Lifnr}" displayValue="{factoringData>Name1}"/>
								</vizData:dimensions>
								<vizData:measures>
									<vizData:MeasureDefinition name="Amount (â‚¹ L)" value="{factoringData>Factoring}"/>
								</vizData:measures>
							</vizData:FlattenedDataset>
						</viz:dataset>
						<!-- Feeds -->
						<viz:feeds>
							<vizFeeds:FeedItem uid="valueAxis" type="Measure" values="Amount (â‚¹ L)"/>
							<vizFeeds:FeedItem uid="categoryAxis" type="Dimension" values="Vendor Name"/>
						</viz:feeds>
					</viz:VizFrame>
				</suite:content>
			</suite:ChartContainerContent>
			<!-- ðŸ“‹ TABLE VIEW -->
			<suite:ChartContainerContent icon="sap-icon://table-chart" title="Table View">
				<suite:content>
					<table:Table id="idFactoringTable" rows="{factoringData>/}" selectionMode="None">
						<table:columns>
								<table:Column>
								<m:Label text="Vendor"/>
								<table:template>
									<m:Text text="{factoringData>Lifnr}"/>
								</table:template>
							</table:Column>
							<!-- Vendor Name -->
							<table:Column>
								<m:Label text="Vendor Name"/>
								<table:template>
									<m:Text text="{factoringData>Name1}"/>
								</table:template>
							</table:Column>
							<!-- Amount -->
							<table:Column>
								<m:Label text="Amount (â‚¹ L)"/>
								<table:template>
									<m:Text text="{factoringData>Factoring}"/>
								</table:template>
							</table:Column>
						</table:columns>
					</table:Table>
				</suite:content>
			</suite:ChartContainerContent>
		</suite:content>
	</suite:ChartContainer>
</core:FragmentDefinition>