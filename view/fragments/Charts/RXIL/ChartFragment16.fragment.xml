<core:FragmentDefinition xmlns:suite="sap.suite.ui.commons" xmlns:m="sap.m" xmlns:core="sap.ui.core" xmlns:table="sap.ui.table"
	xmlns:viz="sap.viz.ui5.controls" xmlns:vizData="sap.viz.ui5.data" xmlns:vizFeeds="sap.viz.ui5.controls.common.feeds">
	<suite:ChartContainer id="chartContainerTotalLC" showFullScreen="true" showPersonalization="false" autoAdjustHeight="false"
		showLegendButton="false" title="Total RXIL">
		<!-- ðŸ“Š Chart Content -->
		<suite:ChartContainerContent icon="sap-icon://bar-chart" title="Chart View">
			<suite:content>
				<viz:VizFrame id="idTotalRXILChart" vizType="column" height="380px" width="100%" uiConfig="{applicationSet:'fiori'}">
					<!-- Tooltip Popover -->
					<viz:dependents>
						<viz:Popover id="idTotalLCPopover"/>
					</viz:dependents>
					<!-- Dataset -->
					<viz:dataset>
						<vizData:FlattenedDataset data="{totalRXILData>/}">
							<vizData:dimensions>
								<vizData:DimensionDefinition name="Company Code" value="{totalRXILData>Bukrs}"/>
							</vizData:dimensions>
							<vizData:measures>
								<vizData:MeasureDefinition name="Amount (â‚¹ L)" value="{totalRXILData>Total}"/>
							</vizData:measures>
						</vizData:FlattenedDataset>
					</viz:dataset>
					<!-- Feeds -->
					<viz:feeds>
						<vizFeeds:FeedItem uid="valueAxis" type="Measure" values="Amount (â‚¹ L)"/>
						<vizFeeds:FeedItem uid="categoryAxis" type="Dimension" values="Company Code"/>
					</viz:feeds>
				</viz:VizFrame>
			</suite:content>
		</suite:ChartContainerContent>
		<!-- ðŸ“‹ Table Content -->
		<suite:ChartContainerContent icon="sap-icon://table-chart" title="Table View">
			<suite:content>
				<table:Table id="idTotalLCTable" rows="{totalRXILData>/}" selectionMode="None" visibleRowCount="10">
					<table:columns>
						<!-- Company Code -->
						<table:Column>
							<m:Label text="Company Code"/>
							<table:template>
								<m:Text text="{totalRXILData>Bukrs}"/>
							</table:template>
						</table:Column>
						<!-- LC Amount -->
						<table:Column>
							<m:Label text="Amount (â‚¹ L)"/>
							<table:template>
								<m:Text text="{totalRXILData>Total}"/>
							</table:template>
						</table:Column>
					</table:columns>
				</table:Table>
			</suite:content>
		</suite:ChartContainerContent>
	</suite:ChartContainer>
</core:FragmentDefinition>