<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:m="sap.m" xmlns:suite="sap.suite.ui.commons" xmlns:table="sap.ui.table"
	xmlns:viz="sap.viz.ui5.controls" xmlns:vizData="sap.viz.ui5.data" xmlns:vizFeeds="sap.viz.ui5.controls.common.feeds">
	<suite:ChartContainer id="chartContainer4" showFullScreen="true" showPersonalization="false" autoAdjustHeight="false"
		showLegendButton="true" title="Total Vendor Advance">
		<suite:content>
			<!-- ðŸ“Š Chart View -->
			<suite:ChartContainerContent icon="sap-icon://bar-chart" title="Chart View">
				<suite:content>
					<viz:VizFrame id="idTotalVendorAdvanceChart" vizType="column" height="400px" width="100%" uiConfig="{applicationSet:'fiori'}">
						<!-- Tooltip Popover -->
						<viz:dependents>
							<viz:Popover id="idTotalVendorAdvancePopOver"/>
						</viz:dependents>
						<!-- Chart Dataset -->
						<viz:dataset>
							<vizData:FlattenedDataset data="{totalVendorAdvanceData>/}">
								<vizData:dimensions>
									<vizData:DimensionDefinition name="Company Code" value="{totalVendorAdvanceData>Bukrs}"/>
								</vizData:dimensions>
								<vizData:measures>
									<vizData:MeasureDefinition name="Amount (â‚¹ L)" value="{totalVendorAdvanceData>Total}"/>
								</vizData:measures>
							</vizData:FlattenedDataset>
						</viz:dataset>
						<!-- Chart Feeds -->
						<viz:feeds>
							<vizFeeds:FeedItem uid="valueAxis" type="Measure" values="Amount (â‚¹ L)"/>
							<vizFeeds:FeedItem uid="categoryAxis" type="Dimension" values="Company Code"/>
						</viz:feeds>
					</viz:VizFrame>
				</suite:content>
			</suite:ChartContainerContent>
			<!-- ðŸ“‹ Table View -->
			<suite:ChartContainerContent icon="sap-icon://table-chart" title="Table View">
				<suite:content>
					<table:Table id="idTotalVendorAdvanceTable" rows="{totalVendorAdvanceData>/}" selectionMode="None" visibleRowCount="10">
						<table:columns>
							<table:Column>
								<m:Label text="Company Code"/>
								<table:template>
									<m:Text text="{totalVendorAdvanceData>Bukrs}"/>
								</table:template>
							</table:Column>
							<table:Column>
								<m:Label text="Amount (â‚¹ L)"/>
								<table:template>
									<m:Text text="{totalVendorAdvanceData>Total}"/>
								</table:template>
							</table:Column>
						</table:columns>
					</table:Table>
				</suite:content>
			</suite:ChartContainerContent>
		</suite:content>
	</suite:ChartContainer>
</core:FragmentDefinition>