<core:FragmentDefinition xmlns:suite="sap.suite.ui.commons" xmlns:m="sap.m" xmlns:core="sap.ui.core" xmlns:table="sap.ui.table"
	xmlns:viz="sap.viz.ui5.controls" xmlns:vizData="sap.viz.ui5.data" xmlns:vizFeeds="sap.viz.ui5.controls.common.feeds">
	<suite:ChartContainer id="chartContainerTop10Creditor" showFullScreen="true" showPersonalization="false" autoAdjustHeight="false"
		showLegendButton="false" title="Top 10 Creditors">
		<!-- Chart Content -->
		<suite:ChartContainerContent icon="sap-icon://bar-chart" title="Chart View">
			<suite:content>
				<viz:VizFrame id="idTop10CreditorChart" vizType="column" height="380px" width="100%" uiConfig="{applicationSet:'fiori'}">
					<!-- Popover for tooltips -->
					<viz:dependents>
						<viz:Popover id="idTop10CreditorPopover"/>
					</viz:dependents>
					<!-- Dataset -->
					<viz:dataset>
						<vizData:FlattenedDataset data="{top10CreditorData>/}">
							<vizData:dimensions>
							<vizData:DimensionDefinition name="Vendor Name" value="{top10CreditorData>Lifnr}" displayValue="{top10CreditorData>Name1}"/>

							</vizData:dimensions>
							<vizData:measures>
								<vizData:MeasureDefinition name="Amount (₹ L)" value="{top10CreditorData>Creditor}"/>
							</vizData:measures>
						</vizData:FlattenedDataset>
					</viz:dataset>
					<!-- Feeds -->
					<viz:feeds>
						<vizFeeds:FeedItem uid="valueAxis" type="Measure" values="Amount (₹ L)"/>
						<vizFeeds:FeedItem uid="categoryAxis" type="Dimension" values="Vendor Name"/>
					</viz:feeds>
				</viz:VizFrame>
			</suite:content>
		</suite:ChartContainerContent>
		<!-- Table Content -->
		<suite:ChartContainerContent icon="sap-icon://table-chart" title="Table View">
			<suite:content>
				<table:Table id="idTop10CreditorTable" rows="{top10CreditorData>/}" selectionMode="None">
					<table:columns>
							<table:Column>
								<m:Label text="Vendor"/>
								<table:template>
									<m:Text text="{top10CreditorData>Lifnr}"/>
								</table:template>
							</table:Column>
						<table:Column>
							<m:Label text="Vendor Name"/>
							<table:template>
								<m:Text text="{top10CreditorData>Name1}"/>
							</table:template>
						</table:Column>
						<table:Column>
							<m:Label text="Amount (₹ L)"/>
							<table:template>
								<m:Text text="{top10CreditorData>Creditor}"/>
							</table:template>
						</table:Column>
					</table:columns>
				</table:Table>
			</suite:content>
		</suite:ChartContainerContent>
	</suite:ChartContainer>
</core:FragmentDefinition>