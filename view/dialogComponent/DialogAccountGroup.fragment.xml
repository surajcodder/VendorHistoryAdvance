<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="idAccountGroupDialog" title="Select Account Group" draggable="true" resizable="true">
		<content>
			<Toolbar>
				<SearchField id="idAccountGroupSearchField" placeholder="Search..." liveChange=".onSearchAccountGroup"/>
				<ToolbarSpacer/>
				<Button id="idSelectAllAccountGroupBtn" text="Select All" press=".onToggleSelectAllAccountGroup"/>
			</Toolbar>
			<List id="idAccountGroupList"
				mode="MultiSelect"
				growing="true"
				growingThreshold="1000"
				selectionChange=".onSelectionChangeAccountGroup"
				items="{accountGroupData>/}">
				<StandardListItem
					title="{accountGroupData>ktokk}"
					description="{accountGroupData>txt30}"/>
			</List>
		</content>
		<buttons>
			<Button text="OK" press=".onConfirmAccountGroup"/>
			<Button text="Cancel" press=".onCloseAccountGroup"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>