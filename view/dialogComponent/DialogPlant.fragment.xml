<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="idPlantDialog" title="Select Plant" draggable="true" resizable="true">
		<content>
			<Toolbar>
				<SearchField id="idPlantSearchField" placeholder="Search..." liveChange=".onSearchPlant"/>
				<ToolbarSpacer/>
				<!--<Button id="idSelectAllPlantBtn" text="Select All" press=".onToggleSelectAllPlant"/>-->
			</Toolbar>

			<List id="idPlantList"
				  mode="SingleSelect"
				  growing="true"
				  growingThreshold="1000"
				  selectionChange=".onSelectionChangePlant"
				  items="{plantData>/}">
				<StandardListItem
					title="{plantData>plant}"
					description="{plantData>name}"/>
			</List>
		</content>

		<buttons>
			<Button text="OK" press=".onConfirmPlant"/>
			<Button text="Cancel" press=".onClosePlant"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>
